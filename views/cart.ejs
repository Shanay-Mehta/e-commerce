<%-include("./partials/header.ejs")-%> <% user.cart.forEach((object)=>{ %>
<div
  style="
    margin-left: 160px;
    display: flex;
    align-items: center;
    margin-top: 80px;
  "
>
  <img
    style="width: 200px; height: 260px; margin: 1rem"
    class="image"
    src="<%= object.image %>"
  />
  <div style="width: 220px; margin-top: 0px; margin-left: 40px" class="title">
    <%= object.title %>
    <br />
    <br />
    <br />
    <b> <%= object.price %></b>
    <form
      style="
        width: 110px;
        height: 40px;
        margin-left: 0px;
        margin-bottom: 10px;
        margin-top: 40px;
        padding: 10px;
        box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        background: white;
      "
      action="/"
      method="POST"
    >
      <button
        style="
          margin-top: 0px;
          margin-bottom: 0px;
          border-radius: 10px;
          background: #fee996;
          border: 0;
          text-transform: uppercase;
          font-weight: 700;
          font-size: 0.8em;
          display: block;
          padding: 10;
          letter-spacing: 2px;
        "
      >
        Remove
      </button>
      <input
        type="hidden"
        name="id"
        class="id"
        value="<%=object.productId %>"
      />
      <input
        type="hidden"
        name="image"
        class="image"
        value="<%=object.image %>"
      />
      <input
        type="hidden"
        name="title"
        class="title"
        value="<%=object.title %>"
      />
      <input
        type="hidden"
        name="price"
        class="price"
        value="<%=object.price %>"
      />
      <input
        type="hidden"
        name="quantity"
        class="quantity"
        value="<%=object.quantity %>"
      />
    </form>
  </div>
</div>

<%}) %>
<a href="/checkout"
  ><button style="margin-left: 200px; margin-top: 80px">CHECKOUT</button></a
>
